<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@id/cv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="5.0dip"
        android:backgroundTint="#ffecf8f8"
        android:elevation="8.0dip"
        app:cardCornerRadius="20.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7.0dip"
                    android:text="Date :"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/heading_textsize"
                    android:textStyle="bold|italic" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/Orders_date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:padding="7.0dip"
                    android:text="Date"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:padding="7.0dip"
                    android:text="Order # :"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/heading_textsize"
                    android:textStyle="bold|italic" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/Orders_order_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.2"
                    android:padding="7.0dip"
                    android:text="Order # :"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:padding="7.0dip"
                    android:text="User ID :"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/heading_textsize"
                    android:textStyle="bold|italic" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/Orders_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:padding="6.0dip"
                    android:text="User ID"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:padding="7.0dip"
                    android:text="Amount :"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/heading_textsize"
                    android:textStyle="bold|italic" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/Order_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.2"
                    android:padding="7.0dip"
                    android:text="Amount"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:padding="7.0dip"
                    android:text="Quantity :"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/heading_textsize"
                    android:textStyle="bold|italic" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/Orders_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:padding="7.0dip"
                    android:text="Quantity"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7.0dip"
                    android:text="Order Status :"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/heading_textsize"
                    android:textStyle="bold|italic" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/Orders_status_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:padding="7.0dip"
                    android:text="Order Status"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Orders_action_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="7.0dip"
                    android:drawableRight="@drawable/ic_arrow_down"
                    android:text="Actions"
                    android:textSize="12.0sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>