<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/cv"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5.0dip"
    android:layout_marginRight="5.0dip"
    android:backgroundTint="#ffecf8f8"
    android:elevation="8.0dip"
    app:cardCornerRadius="20.0dip">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@id/mainLL"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/Vendors_image"
                    android:layout_width="120.0dip"
                    android:layout_height="120.0dip"
                    android:layout_gravity="center"
                    android:layout_margin="7.0dip" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/Vendor_logo_image_update_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10.0dip"
                    android:drawableLeft="@drawable/ic_update_image"
                    android:padding="5.0dip"
                    android:text="Update Image"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize" />

                <ImageView
                    android:id="@+id/Vendors_CNIC_image"
                    android:layout_width="120.0dip"
                    android:layout_height="120.0dip"
                    android:layout_gravity="center"
                    android:layout_margin="7.0dip" />
            </LinearLayout>

            <LinearLayout
                android:id="@id/LL1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="7.0dip"
                        android:text="Email :"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/heading_textsize"
                        android:textStyle="bold|italic" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/Vendors_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.9"
                        android:padding="6.0dip"
                        android:text="12"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/textsize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="7.0dip"
                        android:text="Name :"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/heading_textsize"
                        android:textStyle="bold|italic" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/Vendors_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.9"
                        android:padding="6.0dip"
                        android:text="Fashion Sneaker"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/textsize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="7.0dip"
                        android:text="Status :"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/heading_textsize"
                        android:textStyle="bold|italic" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/Vendors_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/active_status"
                        android:padding="7.0dip"
                        android:text="active"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/textsize" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/Vendors_activate_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:drawableLeft="@drawable/tick"
                        android:text="Activate"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/textsize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="7.0dip"
                        android:text="Date Added :"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/heading_textsize"
                        android:textStyle="bold|italic" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/Vendors_date_added"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.9"
                        android:padding="6.0dip"
                        android:text="4"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/textsize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="7.0dip"
                        android:text="Role:"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/heading_textsize"
                        android:textStyle="bold|italic" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/Vendors_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.9"
                        android:padding="6.0dip"
                        android:text="4"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/textsize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/Vendors_edit_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="40.0dip"
                        android:layout_margin="5.0dip"
                        android:layout_weight="0.5"
                        android:backgroundTint="#ff00ff00"
                        android:drawableLeft="@drawable/ic_edit"
                        android:text="Edit"
                        android:textSize="10.0sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/Vendors_delete_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="40.0dip"
                        android:layout_margin="5.0dip"
                        android:layout_weight="0.5"
                        android:backgroundTint="#ffff0000"
                        android:drawableLeft="@drawable/ic_block"
                        android:text="Block"
                        android:textSize="10.0sp" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Vendors_make_shop"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dip"
                    android:layout_weight="1.0"
                    android:backgroundTint="@color/colorPrimary"
                    android:drawableLeft="@drawable/ic_shop"
                    android:text="Make Shop"
                    android:textSize="10.0sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Vendors_make_featured"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dip"
                    android:layout_weight="1.0"
                    android:backgroundTint="@color/colorPrimary"
                    android:drawableLeft="@drawable/ic_feature"
                    android:text="Make Featured"
                    android:textSize="10.0sp" />
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Vendors_make_whole_seller"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mainLL"
            android:layout_margin="5.0dip"
            android:backgroundTint="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_whole_seller"
            android:text="Make Whole Seller"
            android:textSize="10.0sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>